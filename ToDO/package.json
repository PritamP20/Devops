{
  "name": "ToDO",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate":"cd packages/db && npx prisma generate && cd ../..",
    "start:http":"cd apps/http && bun run index.ts",    
    "start:ws":"cd apps/websocket && bun run index.ts",    
    "start:web":"cd apps/web && bun run start"   
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "5.8.2",
    "@types/bun": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "module": "index.ts",
  "type": "module"
}